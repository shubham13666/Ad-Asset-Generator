# Primary Provider Selection
# Options: tencent, alibaba, stability
INPAINT_PROVIDER=tencent

# Tencent Hunyuan Configuration (PRIMARY - RECOMMENDED)
TENCENT_SECRET_ID=your_secret_id_here
TENCENT_SECRET_KEY=your_secret_key_here
TENCENT_REGION=ap-shanghai

# Alibaba Tongyi Configuration (BACKUP)
ALIBABA_API_KEY=your_api_key_here
ALIBABA_REGION=cn-shanghai

# Stability AI Configuration (LAST RESORT)
STABILITY_API_KEY=your_api_key_here
STABILITY_ENDPOINT=https://api.stability.ai/v2beta

# Provider-Specific Settings
INPAINT_TIMEOUT_SECONDS=60
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=2

# Fallback Configuration
ENABLE_FALLBACK=true
FALLBACK_PROVIDERS=alibaba,stability

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
GCP_PROJECT_ID=your-project-id

# Google Drive Configuration
GOOGLE_DRIVE_ROOT_FOLDER_ID=your_root_folder_id
GOOGLE_DRIVE_LOGS_FOLDER_NAME=Background_Generation_Logs

# Mask Generation Configuration (optional fallback)
# Rembg is used by default (FREE, local) - no API key needed
# Remove.bg is optional fallback ($0.01/image)
REMOVEBG_API_KEY=your_removebg_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_PROVIDER_DETAILS=true

# Cloud Run Configuration
FUNCTION_TIMEOUT=540
MEMORY_LIMIT=2Gi
CPU_LIMIT=2

